<!-- Header -->
<header class="bg-white shadow-sm border-b border-gray-100">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-3 sm:py-4">
    <div class="flex items-center justify-between">
      <%= link_to root_path, class: "flex items-center space-x-2 sm:space-x-3 hover:opacity-80 transition-opacity" do %>
        <div class="w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
          <svg class="w-4 h-4 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <h1 class="text-xl sm:text-2xl font-bold text-gray-900">FindThePhrase</h1>
      <% end %>
      <div class="flex items-center gap-4">
        <%= link_to favorite_segments_path, class: "flex items-center gap-2 px-3 py-2 text-sm text-gray-600 hover:text-red-500 transition-colors rounded-lg hover:bg-gray-50" do %>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
          <span class="hidden sm:inline">Favorites</span>
        <% end %>
        <div class="hidden sm:block text-xs sm:text-sm text-gray-500">
          Little Bear Transcript Search
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 min-h-screen bg-gradient-to-br from-blue-50 to-purple-50">
  <!-- Search Section -->
  <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">

    <div class="mb-4">
      <label for="search" class="block text-sm font-medium text-gray-700 mb-2">
        What phrase are you looking for?
      </label>
      <%= form_with url: search_path, method: :get, local: true, class: "search-form", 
                    data: { 
                      controller: "search", 
                      search_target: "form",
                      turbo_frame: "search_results" 
                    } do |f| %>
        <div class="relative">
          <%= f.text_field :query, 
              value: @query, 
              placeholder: "Type what you heard (e.g., 'duck', 'hey duck')", 
              class: "w-full px-4 py-3 pr-12 text-lg border-2 border-gray-200 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all",
              autocomplete: "off",
              autofocus: true,
              id: "search",
              data: { action: "input->search#search" } %>
          
          <%= f.button type: :submit, 
              class: "absolute right-2 top-1/2 transform -translate-y-1/2 p-2 text-gray-400 hover:text-blue-600 transition-colors",
              data: { disable_with: "..." } do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <%= turbo_frame_tag "search_results" do %>
    <!-- Results Summary -->
    <% if @query.present? && @results.any? %>
      <div class="bg-blue-50 border border-blue-200 rounded-lg px-4 py-3 mb-6">
        <p class="text-blue-900 font-medium">
          Found <span class="font-bold"><%= @total_matches %> matches</span> for "<span class="bg-blue-200 font-medium px-1 rounded"><%= @query %></span>" across <%= @grouped_results.keys.count %> episodes
        </p>
      </div>
    <% end %>

    <!-- Results Container -->
    <% if @query.present? && @results.any? %>
    <div class="space-y-6">
      <% @grouped_results.each do |episode, results| %>
        <!-- Episode Results -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
          <div class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-4 py-3">
            <div class="flex items-center justify-between">
              <h3 class="font-bold text-lg"><%= episode.display_name %></h3>
              <span class="bg-white/20 px-3 py-1 rounded-full text-sm"><%= results.count %> <%= results.count == 1 ? 'match' : 'matches' %></span>
            </div>
          </div>
          
          <div class="divide-y-0">
            <% results.each do |result| %>
              <%= render 'result_card', result: result %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
      
  <% elsif @query.present? %>
    <!-- No Results State -->
    <div class="text-center py-16">
      <div class="inline-block p-10 bg-white rounded-2xl shadow-lg">
        <div class="text-8xl mb-8 animate-pulse">🔍</div>
        <h3 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-3">
          No matches found
        </h3>
        <p class="text-gray-600 text-lg sm:text-xl mb-2">
          We couldn't find "<strong class="text-purple-600"><%= @query %></strong>" in any episodes
        </p>
        <p class="text-gray-500 text-base mt-5">
          💡 Try a different phrase or check your spelling
        </p>
        
        <!-- Suggestions -->
        <div class="mt-8">
          <p class="text-base text-gray-500 mb-4">Try one of these:</p>
          <div class="flex flex-wrap gap-3 justify-center">
            <% search_suggestions.take(4).each do |phrase| %>
              <%= link_to phrase, search_path(query: phrase), 
                  class: "px-5 py-3 bg-purple-100 text-purple-700 rounded-full text-base hover:bg-purple-200 transition-colors" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
      
  <% else %>
    <!-- Welcome/Empty State -->
    <div class="text-center py-6 sm:py-12">
      <div class="inline-block p-4 sm:p-8 lg:p-12 bg-white rounded-2xl sm:rounded-3xl shadow-xl max-w-3xl mx-4">
        <div class="text-6xl sm:text-8xl mb-6 sm:mb-8">🐻</div>
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-800 mb-3 sm:mb-4">
          Welcome to FindThePhrase!
        </h2>
        <p class="text-gray-600 text-base sm:text-lg lg:text-xl mb-6 sm:mb-10 max-w-md mx-auto leading-relaxed px-2">
          Search through all Little Bear episodes to find your favorite moments and phrases
        </p>
        
        <!-- Quick Search Grid -->
        <div class="space-y-4 sm:space-y-5">
          <p class="text-sm sm:text-base text-gray-500 font-medium uppercase tracking-wide">Popular Searches</p>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 max-w-3xl mx-auto">
            <% search_suggestions.each do |phrase| %>
              <%= link_to search_path(query: phrase), 
                  class: "group px-4 sm:px-5 py-3 sm:py-4 bg-gradient-to-r from-blue-50 to-purple-50 rounded-lg sm:rounded-xl text-sm sm:text-base lg:text-lg font-medium text-gray-700 hover:from-blue-100 hover:to-purple-100 hover:shadow-lg transition-all transform hover:scale-105",
                  data: { turbo: false } do %>
                <span class="group-hover:text-purple-600"><%= phrase %></span>
              <% end %>
            <% end %>
          </div>
        </div>
        
        <!-- Features -->
        <div class="mt-8 sm:mt-12 flex justify-center gap-4 sm:gap-8 lg:gap-12 text-center">
          <div class="p-2 sm:p-4">
            <div class="text-3xl sm:text-4xl mb-2 sm:mb-3">⚡</div>
            <p class="text-xs sm:text-sm lg:text-base text-gray-600">Fast Search</p>
          </div>
          <div class="p-2 sm:p-4">
            <div class="text-3xl sm:text-4xl mb-2 sm:mb-3">📝</div>
            <p class="text-xs sm:text-sm lg:text-base text-gray-600">Full Transcripts</p>
          </div>
          <div class="p-2 sm:p-4">
            <div class="text-3xl sm:text-4xl mb-2 sm:mb-3">🎯</div>
            <p class="text-xs sm:text-sm lg:text-base text-gray-600">Exact Matches</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <% end %>
</main>

<!-- Footer -->
<footer class="mt-12 pb-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-sm text-gray-600">
    <p>Built with love to help children communicate through Little Bear 🐻</p>
  </div>
</footer>

<style>
  

  /* Loading animation */
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  .animate-pulse-slow {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  /* Custom scrollbar */
  .results-container::-webkit-scrollbar {
    width: 8px;
  }
  
  .results-container::-webkit-scrollbar-track {
    background: #f1f5f9;
    border-radius: 4px;
  }
  
  .results-container::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 4px;
  }
  
  .results-container::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
  }
  
  
  
  /* Remove tap highlight on mobile */
  * {
    -webkit-tap-highlight-color: transparent;
  }
  
  /* Prevent iOS zoom on input focus */
  input[type="text"],
  input[type="search"] {
    font-size: 16px !important;
  }
</style>

